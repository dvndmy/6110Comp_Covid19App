<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="413dp"
            android:layout_height="148dp"
            android:contentDescription="@string/covid19_app_n_by_team_davja"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/coronavirus_logo_2_833x321" />

        <TextView
            android:id="@+id/lblwelcome_back"
            style="@style/TextlabelStyle"
            android:layout_width="164dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:text="welcome back"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/button2"
            android:layout_width="174dp"
            android:layout_height="80dp"
            android:layout_marginTop="157dp"
            android:layout_marginBottom="7dp"
            android:onClick="OpenUserMental"
            android:text="View user mental data:"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblwelcome_back" />

        <Button
            android:id="@+id/button4"
            android:layout_width="174dp"
            android:layout_height="80dp"
            android:layout_marginTop="7dp"
            android:onClick="OpenUserSymptom"
            android:text="View User Symptom Records"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>