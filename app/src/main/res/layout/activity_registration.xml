<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <EditText
        android:id="@+id/et_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fame"
        android:inputType="textPersonName"
        android:text="Full Name"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:text="Email"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="148dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:text="Password"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="209dp" />

    <CheckBox
        android:id="@+id/cb_hospitalised"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Hospitalised"
        android:text="Hospitalised?"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="288dp" />

    <CheckBox
        android:id="@+id/cb_smoker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Smoker"
        android:text="Smoker?"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="288dp" />

    <EditText
        android:id="@+id/et_medication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Medication"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="356dp"
        tools:text="Medication" />

    <EditText
        android:id="@+id/et_medicalcondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Medical Condition"
        android:inputType="textPersonName"
        android:text="Medical Condition"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="415dp" />

    <EditText
        android:id="@+id/et_age"
        android:layout_width="99dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:text="Age"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="495dp" />

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Weight"
        android:inputType="textPersonName"
        android:text="Weight (lbs)"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="499dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Register"
        android:text="Register"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="605dp"
        android:onClick="OnReg"/>
</androidx.constraintlayout.widget.ConstraintLayout>